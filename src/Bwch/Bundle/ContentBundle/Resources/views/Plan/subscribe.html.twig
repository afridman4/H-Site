{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} - Subscribe on Hosting plan provider{% if provider.provider is defined %}: {{ provider.provider }}{% endif %}
{% endblock %}

{% block body %}

<div class="class_div___layer
            class_div___layer-Main"
     id="id_div___layer-Main">

    {% include 'header.html.twig' %}

    <div class="class_div___element-Main"
         id="id_div___element-Main"
         style="padding:0;">

        <div class="class_div___element-Main--main">
            <div class="class_div___element-Main--main--columns">

                <div class="class_div___element-Main--main--columns--column
								class_div___element-Main--main--columns--column__single">

                    {% if provider is not defined %}
                        <h1>Sorry, provider not found</h1>
                    {% else %}
                        {% if provider.affiliationlink is defined %}
                            {% set url = provider.affiliationlink %}
                        {% elseif provider.website is defined %}
                            {% set url = provider.website %}
                        {% else %}
                            {% set url = 'https://www.google.com.ua/search?q=' ~ provider.provider %}
                        {% endif %}

                        {% if url|slice(0,4) != 'http' %}
                            {% set url = 'http://' ~ url %}
                        {% endif %}

                    <div style="height: 50px"></div>

                    <div style="text-align:center;">

                    <h1>You are about to subscribe on a hosting plan from provider {{ provider.provider }}</h1>
                    <h1>For that you will be redirected to the provider web site</h1>

                    <div style="height: 50px"></div>

                    <table class="class___width__100">
                        <tr>
                            <td style="vertical-align: bottom; text-align: center; width: 40%;">
                                <table class="class___component-Button
                                            class_table___component-Button
                                            class___width__100
                                            class___component-Button__h40_green1
                                            class___component-Button-dimensions__h40
                                            class___component-Button-style__green1"
                                       onclick="location.href='{{ url }}'">
                                    <tr>
                                        <td style="vertical-align:middle;">
                                            <i><b><s><u>Confirm</u></s></b></i>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td style="vertical-align: bottom; text-align: center; width: 30%;">
                                <span style="margin:20px 0 0 30px;font-size:18px;line-height:40px;text-decoration:underline;"><a href="{{ url }}" target="_blank">Open in new window</a></span>
                            </td>
                            <td style="vertical-align: bottom; text-align: center; width: 30%;">
                                <span style="margin:20px 0 0 30px;font-size:18px;line-height:40px;text-decoration:underline;"><a href="#" onclick="history.go(-1);">Cancel</a></span>
                            </td>
                        </tr>
                    </table>

                    <div style="height: 50px"></div>

                    {% endif %}

                </div>
                <div class="class_div___element-Separator-type__clear_both"></div>
            </div>
        </div>
    </div>

    {% include 'footer.html.twig' %}

</div>
{% endblock %}
