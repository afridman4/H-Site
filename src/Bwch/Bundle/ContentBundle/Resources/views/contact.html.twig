{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} - Contact Us Page
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@BwchContentBundle/Resources/public/js/page/contact.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}



{% block body %}

<div class="class_div___layer
            class_div___layer-Main"
     id="id_div___layer-Main">

    {% include 'header.html.twig' %}

    <div class="class_div___element-Main" id="id_div___element-Main">
            <div class="class_div___element-Main--main">
                <div class="class_div___element-Main--main--columns">

                    <div class="class___float__right
								class_div___element-Main--main--columns--column
								class_div___element-Main--main--columns--column__right">

                        {# ======== Reviews section START ======== #}
                        {{ render(controller('BwchContentBundle:Review:recentReviews', {
                        'max': 5
                        })) }}
                        {# ======== Reviews section END ======== #}

                        {# ======== Banner section START ======== #}
                        <div style="margin:10px 0 0;">
                            {{ render(controller('BwchContentBundle:Banner:randomBanner')) }}
                        </div>
                        {# ======== Banner section END ======== #}
                    </div>

                    <div class="class_div___element-Main--main--columns--column class_div___element-Main--main--columns--column__center">

                        <div style="padding:0 10px 16px 0;">
                            <h1 style="margin:0 0 12px 0;">Contact Us</h1>

                            <table class="class_table___element-style__2">

                            </table>
                            <div class="class_div___component class_div___component-Form" id="id_div___component-Form__Contact">

                                <div class="class___position__relative class_div___element-Form">

                                    {% form_theme form 'BwchContentBundle:Form:fields.html.twig' %}
                                    {{ form_start(form, {'action': path('bwch_contact_us'), 'attr' : {'id': 'contact_form'} }) }}
                                    {{ form_errors(form) }}

                                    <div class="class___display__none class_div___element-Form--submission_status_description"></div>

                                    <div class="class_div___element-Form--visible_fields">
                                        <table class="class___width__100  class___margin__0_auto">
                                            <tr>
                                                <td style="">
                                                    <h2 style="display:block;padding:0 0 5px 0;font-size:13px;">Please send us a message using the form below</h2>
                                                    <br>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="">
                                                    <h2 style="display:block;padding:0 0 5px 0;font-size:13px;">Your email</h2>
                                                    <div class="class_div___component
                                                            class_div___component-InputField
			                                                class_div___component-InputField-input_type__uniline_text"
                                                         id="id_div___component-InputField-form_id__Contact__user_email_address"
                                                            >
                                                        <div>
                                                            {{ form_widget(form.email) }}
                                                            {#<input name="name_input___user_email_address" type="text"/>#}
                                                            <i><b></b></i>
                                                            <em></em>
                                                        </div>
                                                        <span><b></b></span>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="">
                                                    <h2 style="display:block;padding:0 0 5px 0;font-size:13px;">Your name</h2>
                                                    <div class="class_div___component
                                                            class_div___component-InputField
			                                                class_div___component-InputField-input_type__uniline_text"
                                                         id="id_div___component-InputField-form_id__Contact__user_name"
                                                            >
                                                        <div>
                                                            {{ form_widget(form.username) }}
                                                            {#<input name="name_input___user_name" type="text"/>#}
                                                            <i><b></b></i>
                                                            <em></em>
                                                        </div>
                                                        <span><b></b></span>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="">
                                                    <h2 style="padding:0 0 5px 0;font-size:13px;">Subject</h2>
                                                    <div class="class_div___component
                                                            class_div___component-InputField
                                                            class_div___component-InputField-input_type__uniline_text"
                                                         id="id_div___component-InputField-form_id__Contact__subject">
                                                        <div>
                                                            {{ form_widget(form.subject) }}
                                                            {#<input name="name_input___subject" type="text"/>#}
                                                            <i><b></b></i>
                                                            <em></em>
                                                        </div>
                                                        <span><b></b></span>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="">
                                                    <h2 style="padding:0 0 5px 0;font-size:13px;">Message</h2>
                                                    <div class="class_div___component
                                                            class_div___component-InputField
                                                            class_div___component-InputField-input_type__multiline_text"
                                                         id="id_div___component-InputField-form_id__Contact__message">
                                                        <div>
                                                            {{ form_widget(form.message) }}
                                                            {#<input name="name_input___message" type="text"/>#}
                                                            <i><b></b></i>
                                                            <em></em>
                                                        </div>
                                                        <span><b></b></span>
                                                    </div>
                                                </td>
                                            </tr>

                                            {% if error %}
                                            <tr>
                                                <td style="padding:0 0 20px;">
                                                    <div class="class_div___component-InputField"><span><b>{{ error }}</b></span></div>
                                                </td>
                                            </tr>
                                            {% endif %}
                                            <tr>
                                                <td>
                                                    <table class="class___width__100">
                                                        <tr>
                                                            <td style="width:30%">
                                                                {{ form_widget(form.submit, {id: 'id_div___component-Button-form_id__Contact-action__confirm'}) }}
                                                            </td>
                                                            <td style="text-align:right;">
                                                                <a href="{{ path('bwch_index') }}" style="font-size:18px;line-height:38px;color:#222222;text-decoration:underline;">Cancel</a>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>

                                        </table>
                                    </div>

                                    <div class="class___display__none class_div___element-Form--hidden_fields"></div>

                                    {{ form_end(form) }}

                                    <div class="class___display__none class_div___element-Form--submission_processing_indicator"><div></div></div>
                                </div>
                            </div>

                        </div>


                    </div>

                </div>
            </div>
    </div>

        {% include 'footer.html.twig' %}
</div>
{% endblock %}

